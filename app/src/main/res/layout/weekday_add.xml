<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_layout">

    <TextView
        android:id="@+id/weekday_add_daytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weekday_add_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_daytxt"
        app:layout_constraintRight_toLeftOf="@id/weekday_add_btn2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weekday_add_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_btn1"
        app:layout_constraintRight_toLeftOf="@id/weekday_add_btn3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weekday_add_btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_btn2"
        app:layout_constraintRight_toLeftOf="@id/weekday_add_btn4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weekday_add_btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_btn3"
        app:layout_constraintRight_toLeftOf="@id/weekday_add_plus_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/weekday_add_plus_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:background="#000000"
        android:src="@drawable/add_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_btn4"
        app:layout_constraintRight_toLeftOf="@id/weekday_add_minus_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/weekday_add_minus_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:enabled="false"
        android:src="@drawable/remove_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weekday_add_plus_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>